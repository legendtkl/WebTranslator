{
  "name": "web-translator",
  "version": "0.1.0",
  "description": "Chrome extension for translating web pages using LLM backends",
  "main": "src/background/service-worker.js",
  "scripts": {
    "dev": "npm run watch",
    "watch": "chokidar \"src/**/*\" -c \"npm run build\"",
    "build": "npm run build:manifest && npm run build:icons",
    "build:manifest": "echo 'Manifest is ready'",
    "build:icons": "echo 'Icons generated via create-icons.html'",
    "test": "jest",
    "lint": "eslint src/ --ext .js",
    "package": "npm run build && zip -r web-translator.zip . -x 'node_modules/*' 'tests/*' '*.zip' '.git/*' 'package-lock.json'",
    "validate": "web-ext lint",
    "install:dev": "npm install && echo 'Load unpacked extension from this directory in Chrome'"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "llm",
    "openai",
    "azure",
    "chinese"
  ],
  "author": "WebTranslator Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "web-ext": "^7.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
